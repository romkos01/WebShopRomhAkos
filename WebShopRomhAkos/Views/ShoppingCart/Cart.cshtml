@{
}
@model List<WebShopRomhAkos.Models.CartItem>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Shopping Cart</title>
    <link rel="stylesheet" type="text/css" href="~/css/customviews/cart.css" />
</head>
<body>
    <div class="cart-container">
        <h2>Your Cart</h2>

        @if (Model.Any())
        {
            <ul class="cart-list">
                @foreach (var item in Model)
                {
                    <li class="cart-item">
                        <img src="@Url.Content("~/images/" + item.ProductImageUrl)" class="cart-item-image" alt="@item.ProductName">
                        <div class="cart-item-info">
                            <span class="cart-item-name">@item.ProductName</span>
                            <span class="cart-item-quantity">@item.Quantity</span> x
                            <span class="cart-item-price">@item.ProductPrice.ToString("C")</span>
                        </div>
                    </li>
                }
            </ul>
        }
        else
        {
                <p class="cart-empty">Your cart is empty.</p>
        }
    </div>
</body>
</html>